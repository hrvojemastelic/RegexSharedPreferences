<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_purple</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashScreenTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>

    </style>

    <style name="Titletext" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/championship</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24dp</item>

        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
    </style>

    <style name="Messagetext" parent="TextAppearance.AppCompat">
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#BB1010</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/varsity_regular</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>


    </style>
    <style name="RadioButtonText" parent="TextAppearance.AppCompat">
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18dp</item>
        <item name="android:typeface">sans</item>


    </style>
</resources>
